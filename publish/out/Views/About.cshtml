@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@using Umbraco.Cms.Core.Models

@{
	Layout = "masterTemplate.cshtml";
    var AboutHeaderImage = Model.Value<MediaWithCrops>("aboutHeaderImage");
    var AboutDetailsImage = Model.Value<MediaWithCrops>("aboutDetailsImage");
    var AboutMidSectionImage = Model.Value<MediaWithCrops>("aboutMidSectionImage");

}

<div class="site-content">
    <!--=================================
    Page Header -->
    <div class="inner-header bg-holder" style="background-image: url(@AboutHeaderImage?.MediaUrl());">
        <div class="container">
            <div class="row  justify-content-center">
                <div class="col-md-12 text-center">
                    <h1 class="title">@Model.Value("aboutHeaderTitle")</h1>
                    <ul class="breadcrumb mb-0 p-0">
                        <li class="breadcrumb-item active"><a href="index.html">@Model.Value("aboutHeaderDesc")</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <div class="content-wrapper">

        <!--=================================
        About Section -->
        <section class="space-ptb section-bg-effect">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-xl-5 mb-lg-5 text-center text-xl-start mb-5 mb-xl-0">
                        <div class="image-with-price">
                          
                            <img class="img-fluid radius-15" src="@AboutDetailsImage?.MediaUrl()" alt="About Image" />
                        </div>
                    </div>
                    <div class="col-xl-7 ps-xl-5 pe-lg-5">
                        <div class="section-title pe-xxl-5 me-xxl-5"><h2 class="title">@Model.Value("aboutDetailsTitle")</h2></div>
                        <div class="ps-xxl-5 ms-0 ms-md-5">
                            <div class="row">
                                <div class="col-lg-10 mb-3">
                                    <p>@Model.Value("aboutDetailsDesc")</p>
                                </div>
                            </div>
                            <div class="row align-items-center">
                                <div class="col-md-9">
                                    <div class="list-wrapper">

                                        @{
                                            if (Model.Value<string[]>("aboutDetailsPoints").Length > 0)
                                            {
                                                <ul class="list col-2">
                                                    @foreach (var item in Model.Value<string[]>("aboutDetailsPoints"))
                                                    {
                                                        <li><i class="fa-regular fa-snowflake"></i> @item</li>
                                                    }
                                                </ul>
                                            }
                                        }

                                        
                                    </div>
                                </div>
                                <div class="col-md-3 mt-5 mt-md-0">
                                    <a class="btn btn-effect" href="#"><span>About Us</span></a>
                                </div>
                            </div>
                        </div>
                        <div class="row mt-5">
                            <div class="col-lg-4 col-sm-4 mt-4">
                                <div class="counter">
                                    <div class="counter-number"><span class="timer mb-0" data-to="5" data-speed="2000">@Model.Value("aboutDetailsNo1")</span><span class="suffix">M</span></div>
                                    <div class="counter-info"><span class="counter-title">@Model.Value("aboutDetailsNo11")</span></div>
                                </div>
                            </div>
                            <div class="col-lg-4 col-sm-4 mt-4">
                                <div class="counter">
                                    <div class="counter-number"><span class="timer mb-0" data-to="30" data-speed="2000">@Model.Value("aboutDetailsNo2")</span><span class="suffix">K+</span></div>
                                    <div class="counter-info"><span class="counter-title">@Model.Value("aboutDetailsNo22")</span></div>
                                </div>
                            </div>
                            <div class="col-lg-4 col-sm-4 mt-4">
                                <div class="counter">
                                    <div class="counter-number"><span class="timer mb-0" data-to="10" data-speed="2000">@Model.Value("aboutDetailsNo3")</span><span class="suffix">K+</span></div>
                                    <div class="counter-info"><span class="counter-title">@Model.Value("aboutDetailsNo33")</span></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!--=================================
        Video -->
        <section class="video-bg-jarallax jarallax" style="background-image: url(@AboutMidSectionImage?.MediaUrl()); background-position: center center; background-size: cover;">
            <div class="video-wrapper wrapper-absolute" data-cursor-type="text" data-custom-text="Play">
                <a class="popup-youtube video-btn cursor-style btn-hide" href="https://www.youtube.com/watch?v=SZEflIVnhH8&amp;t=1s">Play</a>
            </div>
        </section>

        <!--=================================
        Testimonial -->
        <section class="space-pt big-testimonial-section section-bg-effect">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        @Html.GetBlockListHtml(Model, "aboutTestimonials", "AboutTestimonial")
                    </div>
                </div>
            </div>
        </section>

      
    </div>
</div>